{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "title": "Accounts collection schema",
  "description": "A schema for persons age.",
    "type": "object",
  "properties": {
    "age": {
      "type": "number",
      "description": "A persons age.",
      "maximum": 20
    },
    "address": {
      "type": "object",
      "description": "A persons home address.",
      "properties": {
        "streetNumber": {
          "type": "number",
          "description": "A persons age.",
          "maximum": 200
        }
      }
    },
    "contacts": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A persons home address.",
        "properties": {
          "streetNumber": {
            "type": "number",
            "description": "A persons age.",
            "maximum": 200
          }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    }
  }
}